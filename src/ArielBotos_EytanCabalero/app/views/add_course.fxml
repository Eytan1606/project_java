<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ArielBotos_EytanCabalero.app.controllers.AddCourseController"
          hgap="10" vgap="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="courseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Course Code:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="courseCodeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Credits:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="creditsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Save Course" onAction="#handleSaveCourse" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

</GridPane>
